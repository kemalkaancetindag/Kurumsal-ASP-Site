@using kurumsal_asp_3.Models
@{
    ViewData["Title"] = "Home Page";
    var data = (HomeModel)ViewData["Message"];
}

<div class="container">
    <div class="row my-5 justify-content-center ">
        <div id="carouselExampleControls" class="carousel slide d-flex" data-ride="carousel">
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src=@data.carouserImgUrl alt="First slide">
                </div>
                <div class="carousel-item">
                    <img src=@data.carouserImgUrl alt="Second slide">
                </div>
                <div class="carousel-item">
                    <img src=@data.carouserImgUrl alt="Third slide">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>

        <div class="row my-5">
            <div class="col text-left">
                <h1>@data.header1</h1>
                <p>
                    @data.text1
                </p>
            </div>
        </div>
        <div class="row">
            <div class="col">
                <h1>@data.header2</h1>
                <p>
                    @data.text2
                </p>
            </div>
            <div class="col-sm">
                <img class="float-right d-flex" src="https://via.placeholder.com/400x300.png" />
            </div>
        </div>
    </div>
</div>
